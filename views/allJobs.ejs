<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row mt-5 mb-5">
        <div class="col-md-4">
          <div>
            <a href="/admin/homepage" class="btn btn-success">Post Job</a>
          </div>
        </div>
        <div class="col-md-4">
          <div>
            <a href="/admin/allusers" class="btn btn-success">User Details</a>
          </div>
        </div>
        <div class="col-md-4">
          <div>
            <a
              href="http://localhost:8000/api/admin/logout"
              class="btn btn-danger"
              >Logout</a
            >
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row mt-5 mb-5">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
          <form method="post" action="/api/admin/searchjobs">
            <input
              type="search"
              id="form1"
              class="form-control"
              placeholder="Search"
              name="search"
            />
            <div>
              <input type="submit" class="btn btn-primary" value="Search" />
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="container">
      <h1 class="mt-5 mb-5 text-center text-primary"><b>All Jobs</b></h1>
      <div class="row mt-5 mb-5">
        <%console.log('alljobsbsbs',alljobs)%> <% alljobs.forEach((job)=> { %>
        <div class="col-md-4 mb-5">
          <div class="card">
            <div class="card-header">
              <h4><%= job.job_title %></h4>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <b>Company: </b><%= job.company_name %>
                </li>
                <li class="list-group-item">
                  <b>No of opening: </b><%= job.no_of_openings %>
                </li>
                <li class="list-group-item">
                  <b>Category: </b><%= job.job_category %>
                </li>
                <li class="list-group-item">
                  <b>Location: </b><%= job.job_location %>
                </li>
                <li class="list-group-item">
                  <b>Level: </b><%= job.job_level %>
                </li>
                <li class="list-group-item">
                  <b>Experience:</b><%= job.experience %>
                </li>
                <li class="list-group-item">
                  <b>Expiry date: </b><%= job.expiry_date %>
                </li>
                <li class="list-group-item">
                  <b>Skills: </b><%= job.skills %>
                </li>
                <li class="list-group-item">
                  <b>Description: </b><%= job.job_description %>
                </li>
                <li class="list-group-item">
                  <b>Salary: </b><%= job.salary %>
                </li>
                <li
                  class="list-group-item"
                  style="display: flex; justify-content: space-around"
                >
                  <a
                    href="<%= 'http://localhost:8000/api/admin/jobdetails?id=' + job.id %>"
                    class="btn btn-primary"
                    >View Details</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="https://use.fontawesome.com/a6508ff195.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
